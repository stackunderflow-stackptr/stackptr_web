
{
   "controller": {
   },
   "workers": [
	  {
		 "type": "router",
		 "options": {
			"pythonpath": [".."]
		 },
		 "realms": [
			{
			   "name": "stackptr",
			   "roles": [
				  {
					 "name": "anonymous",
					 "permissions": [
						{
						   "uri": "*",
						   "publish": true,
						   "subscribe": true,
						   "call": true,
						   "register": true
						}
					 ]
				  }
			   ]
			}
		 ],
		 "transports": [
			{
			   "type": "web",
			   "endpoint": {
				  "type": "tcp",
				  "port": 8080
			   },
			   "paths": {
				  "/": {
					 "type": "wsgi",
					 "module": "stackptr",
					 "object": "app"
				  },
				  "static": {
				  	"type": "static",
				  	"directory": "../static/"
				  },
				  "ws": {
					 "type": "websocket"
				  }
			   },
			   "options": {
			   		"access_log": true
			   }
			},
			
			{
				"type": "web",
					"endpoint": {
						"type": "tcp",
						"interface": "127.0.0.1",
						"port": 9000
					},
					"paths": {
						"/": {
							"type": "pusher",
							"realm": "stackptr",
							"role": "anonymous",
							"options": {
								"require_ip": ["127.0.0.1"]
							}
						}
					}
			
			}
			
		 ]
	  }
   ]
}
